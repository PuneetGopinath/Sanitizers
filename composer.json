{
    "name": "sanitizers/sanitizers",
    "description": "Quickly Sanitize user data",
    "type": "library",
    "keywords": [
        "Sanitizers",
        "back-end",
        "backend",
        "security",
        "sanitization",
        "validate",
        "Sanitize",
        "web",
        "php",
        "PHP Sanitizers",
        "user-input",
        "escape",
        "filter",
        "sanitize-input",
        "input sanitizer",
        "xss"
    ],
    "config": {
        "process-timeout": 500,
        "platform-check": true
    },
    "homepage": "https://github.com/PuneetGopinath/Sanitizers#readme",
    "license": "MIT",
    "authors": [
        {
            "name": "Puneet Gopinath",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=5.6.0",
        "ext-filter": "*",
        "ext-mbstring": "*"
    },
    "suggest": {
        "ext-iconv": "Needed for encoding user input",
        "psr/log": "Optional package for debugging"
    },
    "archive": {
        "name": "Sanitizers"
    },
    "scripts": {
        "setup": [
            "composer validate",
            "composer update"
        ],
        "test": "@php test/SanitizersTest.php -- --debug"
    },
    "scripts-descriptions": {
        "setup": "Setup composer, generate autoload files, etc...",
        "test": "Run Sanitizers built-in test!"
    },
    "autoload": {
        "classmap": ["src/"],
        "psr-4": {
            "Sanitizers\\Sanitizers\\": "src/"
        }
    },
    "support": {
        "docs": "https://puneetgopinath.github.io/Sanitizers",
        "wiki":"https://github.com/PuneetGopinath/Sanitizers/wiki",
        "issues": "https://github.com/PuneetGopinath/Sanitizers/issues"
    },
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/PuneetGopinath/Sanitizers"
        },
        {
            "type": "package",
            "package": {
                "name": "sanitizers/sanitizers",
                "version": "v1.0.1",
                "dist": {
                    "url": "https://github.com/PuneetGopinath/Sanitizers/archive/v1.0.1.zip",
                    "type": "zip"
                }
            }
        }
    ]
}
